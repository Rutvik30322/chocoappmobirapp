            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "name",
                  "value": "Premium Dark Chocolate - Updated",
                  "type": "text"
                },
                {
                  "key": "price",
                  "value": "9.99",
                  "type": "text"
                },
                {
                  "key": "mainImage",
                  "description": "New main product image",
                  "type": "file",
                  "src": []
                },
                {
                  "key": "additionalImages",
                  "description": "New additional product images",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/products/{{created_product_id}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products", "{{created_product_id}}"]
            },
            "description": "Update an existing product with new images. Replace {{created_product_id}} with actual product ID."
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var responseJson = pm.response.json();",
                  "",
                  "pm.test('Product updated successfully', function () {",
                  "    pm.response.to.have.status(200);",
                  "    pm.expect(responseJson.success).to.be.true;",
                  "    pm.expect(responseJson.data).to.have.property('product');",
                  "    pm.expect(responseJson.data.product.name).to.include('Updated');",
                  "    pm.expect(responseJson.data.product).to.have.property('image');",
                  "    pm.expect(responseJson.data.product).to.have.property('images');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
